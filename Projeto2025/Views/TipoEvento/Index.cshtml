@model Projeto2025.DTOs.TipoEventoDTO

@{
    ViewData["Title"] = "Index";
}

<h1>Cadastro de Tipo Evento</h1>

<div class="col-3 mb-3">
    <a asp-action="Listar" asp-controller="TipoEvento" class="btn btn-info">
        Listar
    </a>
</div>

<form asp-action="Salvar" asp-controller="TipoEvento" method="post">
    <input type="hidden" asp-for="id" />


    <div class="form-group">
        <label asp-for="Descricao"></label>
        <input type="text" asp-for="Descricao" class="form-control" />
        <span class="alert-danger" asp-validation-for="Descricao">
        </span>
    </div>

    <div>
        <span class="@ViewBag.classe">@ViewBag.mensagem</span>
    </div>


    <div class="form-group">
        <button type="submit" class="btn btn-success">
            Salvar
        </button>

        <a asp-action="Index" asp-controller="TipoEvento" class="btn btn-primary">
            Novo
        </a>
    </div>


</form>