@model Projeto2025.DTOs.ServicoDTO
@{
    ViewData["Title"] = "Index";
}

<h1>Cadastro Serviço</h1>


<div class="col-3">
    <a asp-action="Listar" asp-controller="Servico"
       class="btn btn-info">
        Listar
    </a>
</div>

<form asp-action="Salvar" asp-controller="Servico" method="post">
    <input type="hidden" asp-for="id" />

  
    <div class="form-group">
        <label asp-for="NomeServico"></label>
        <input type="text" asp-for="NomeServico" class="form-control" />
        <span class="alert-danger" asp-validation-for="NomeServico"></span>
    </div>

    <div class="form-group">
        <label asp-for="ValorPorPessoa"></label>
        <input type="text" asp-for="ValorPorPessoa" class="form-control" />
        <span class="alert-danger" asp-validation-for="ValorPorPessoa"></span>
    </div>

    <div class="form-group">
        <label asp-for="DuracaoHoras"></label>
        <input type="text" asp-for="DuracaoHoras" class="form-control" />
        <span class="alert-danger" asp-validation-for="DuracaoHoras"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descricao"></label>
        <input type="text" asp-for="Descricao" class="form-control" />
        <span class="alert-danger" asp-validation-for="Descricao"></span>
    </div>

    <div>
        <span class="@ViewBag.classe">@ViewBag.mensagem</span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-success">
            Salvar
        </button>

        <a asp-action="Index" asp-controller="Servico" class="btn btn-primary">
            Novo
        </a>
    </div>
</form>
