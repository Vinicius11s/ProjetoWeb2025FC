@model Projeto2025.DTOs.ServicoDTO
@{
    ViewData["Title"] = "Index";
}

<h1>Serviço</h1>



<div class="col-3">
    <a asp-action="Listar" asp-controller="Servico"
       class="btn btn-info">
        Listar
    </a>
</div>

<form asp-action="Salvar" asp-controller="Servico" method="post">
    <input type="hidden" asp-for="id" />

  
    <div class="form-group">
        <label asp-for="NomeServico"></label>
        <input type="text" asp-for="NomeServico" class="form-control" />
        <span class="alert-danger" asp-validation-for="NomeServico"></span>
    </div>

    <div class="form-group">
        <label asp-for="ValorServico"></label>
        <input type="text" asp-for="ValorServico" class="form-control" />
        <span class="alert-danger" asp-validation-for="ValorServico"></span>
    </div>

    <div class="form-group">
        <label asp-for="QtdeProfissionais"></label>
        <input type="text" asp-for="QtdeProfissionais" class="form-control" />
        <span class="alert-danger" asp-validation-for="QtdeProfissionais"></span>
    </div>

    <div class="form-group">
        <label asp-for="Cardapio"></label>
        <input type="text" asp-for="Cardapio" class="form-control" />
        <span class="alert-danger" asp-validation-for="Cardapio"></span>
    </div>

    <div>
        <span class="@ViewBag.classe">@ViewBag.mensagem</span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-success">
            Salvar
        </button>
    </div>
</form>
